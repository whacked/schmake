{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "patternProperties": {
    ".*": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        {
          "additionalProperties": false,
          "properties": {
            "in": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "notify": {
              "additionalProperties": true,
              "type": "object"
            },
            "out": {
              "type": "string"
            },
            "post": {
              "type": "string"
            },
            "pre": {
              "type": "string"
            },
            "run": {
              "type": "string"
            }
          },
          "required": [
            "run"
          ],
          "type": "object"
        }
      ]
    }
  },
  "type": "object"
}
